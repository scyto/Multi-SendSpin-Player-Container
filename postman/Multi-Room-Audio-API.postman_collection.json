{
	"info": {
		"_postman_id": "multiroom-audio-api",
		"name": "Multi-Room Audio Controller API",
		"description": "API for managing Sendspin audio players in a multi-room setup.\n\n**Setup:**\n1. Set the `baseUrl` variable to your server (e.g., `http://192.168.1.100:8096`)\n2. For HAOS, use the ingress URL or direct IP if port is exposed\n\n**Technology:**\n- ASP.NET Core 8.0\n- SendSpin.SDK 2.0 for Music Assistant integration\n- PortAudio for audio output",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"variable": [
		{
			"key": "baseUrl",
			"value": "http://YOUR_SERVER_IP:8096",
			"type": "string"
		},
		{
			"key": "playerName",
			"value": "Kitchen",
			"type": "string"
		}
	],
	"item": [
		{
			"name": "Health",
			"item": [
				{
					"name": "Health Check",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/health",
							"host": ["{{baseUrl}}"],
							"path": ["api", "health"]
						},
						"description": "Check if the API is healthy and responding"
					}
				}
			]
		},
		{
			"name": "Players",
			"item": [
				{
					"name": "Get All Players",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/players",
							"host": ["{{baseUrl}}"],
							"path": ["api", "players"]
						},
						"description": "Retrieve a list of all configured players with their current status"
					}
				},
				{
					"name": "Create Player",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"name\": \"Kitchen\",\n    \"device\": \"0\",\n    \"volume\": 75,\n    \"delayMs\": 0\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/players",
							"host": ["{{baseUrl}}"],
							"path": ["api", "players"]
						},
						"description": "Create a new Sendspin player for Music Assistant.\n\nParameters:\n- name: Display name for the player\n- device: PortAudio device index (use /api/devices to list)\n- volume: Startup volume (0-100)\n- delayMs: Audio delay offset in milliseconds"
					}
				},
				{
					"name": "Get Single Player",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/players/{{playerName}}",
							"host": ["{{baseUrl}}"],
							"path": ["api", "players", "{{playerName}}"]
						},
						"description": "Get configuration details for a specific player"
					}
				},
				{
					"name": "Delete Player",
					"request": {
						"method": "DELETE",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/players/{{playerName}}",
							"host": ["{{baseUrl}}"],
							"path": ["api", "players", "{{playerName}}"]
						},
						"description": "Delete a player and stop it if running"
					}
				},
				{
					"name": "Stop Player",
					"request": {
						"method": "POST",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/players/{{playerName}}/stop",
							"host": ["{{baseUrl}}"],
							"path": ["api", "players", "{{playerName}}", "stop"]
						},
						"description": "Stop the audio player"
					}
				},
				{
					"name": "Restart Player",
					"request": {
						"method": "POST",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/players/{{playerName}}/restart",
							"host": ["{{baseUrl}}"],
							"path": ["api", "players", "{{playerName}}", "restart"]
						},
						"description": "Restart the audio player"
					}
				}
			]
		},
		{
			"name": "Volume",
			"item": [
				{
					"name": "Set Volume",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"volume\": 75\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/players/{{playerName}}/volume",
							"host": ["{{baseUrl}}"],
							"path": ["api", "players", "{{playerName}}", "volume"]
						},
						"description": "Set the volume level (0-100) for a player"
					}
				}
			]
		},
		{
			"name": "Offset",
			"item": [
				{
					"name": "Set Delay Offset",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"delayMs\": 50\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/players/{{playerName}}/offset",
							"host": ["{{baseUrl}}"],
							"path": ["api", "players", "{{playerName}}", "offset"]
						},
						"description": "Update audio delay offset for multi-room sync.\n\nPositive values delay audio (if room is ahead).\nNegative values advance audio (if room is behind)."
					}
				}
			]
		},
		{
			"name": "Devices",
			"item": [
				{
					"name": "Get Audio Devices",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/devices",
							"host": ["{{baseUrl}}"],
							"path": ["api", "devices"]
						},
						"description": "Get available PortAudio audio devices. Use the device index when creating players."
					}
				}
			]
		},
		{
			"name": "Providers",
			"item": [
				{
					"name": "Get Available Providers",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/providers",
							"host": ["{{baseUrl}}"],
							"path": ["api", "providers"]
						},
						"description": "Get list of available player providers (Sendspin only in v2.0)"
					}
				}
			]
		}
	]
}
