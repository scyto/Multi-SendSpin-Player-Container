{
	"info": {
		"_postman_id": "multiroom-audio-api",
		"name": "Multi-Room Audio Controller API",
		"description": "API for managing multiple audio players (Squeezelite, Sendspin, Snapcast) in a multi-room setup.\n\n**Setup:**\n1. Set the `baseUrl` variable to your server (e.g., `http://192.168.1.100:8095`)\n2. For HAOS, use the ingress URL or direct IP if port is exposed",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"variable": [
		{
			"key": "baseUrl",
			"value": "http://YOUR_SERVER_IP:8095",
			"type": "string"
		},
		{
			"key": "playerName",
			"value": "Living Room",
			"type": "string"
		}
	],
	"item": [
		{
			"name": "Players",
			"item": [
				{
					"name": "Get All Players",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/players",
							"host": ["{{baseUrl}}"],
							"path": ["api", "players"]
						},
						"description": "Retrieve a list of all configured players with their current status"
					}
				},
				{
					"name": "Create Player - Squeezelite",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"name\": \"Living Room\",\n    \"device\": \"hw:1,0\",\n    \"provider\": \"squeezelite\",\n    \"server_ip\": \"192.168.1.100\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/players",
							"host": ["{{baseUrl}}"],
							"path": ["api", "players"]
						},
						"description": "Create a new Squeezelite player for Logitech Media Server"
					}
				},
				{
					"name": "Create Player - Sendspin",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"name\": \"Kitchen\",\n    \"device\": \"default\",\n    \"provider\": \"sendspin\",\n    \"server_url\": \"ws://192.168.1.100:8095\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/players",
							"host": ["{{baseUrl}}"],
							"path": ["api", "players"]
						},
						"description": "Create a new Sendspin player for Music Assistant"
					}
				},
				{
					"name": "Create Player - Snapcast",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"name\": \"Bedroom\",\n    \"device\": \"default\",\n    \"provider\": \"snapcast\",\n    \"server_ip\": \"192.168.1.100\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/players",
							"host": ["{{baseUrl}}"],
							"path": ["api", "players"]
						},
						"description": "Create a new Snapcast player for Snapserver"
					}
				},
				{
					"name": "Update Player",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"name\": \"Living Room Updated\",\n    \"device\": \"hw:1,0\",\n    \"server_ip\": \"192.168.1.100\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/players/{{playerName}}",
							"host": ["{{baseUrl}}"],
							"path": ["api", "players", "{{playerName}}"]
						},
						"description": "Update an existing player's configuration"
					}
				},
				{
					"name": "Delete Player",
					"request": {
						"method": "DELETE",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/players/{{playerName}}",
							"host": ["{{baseUrl}}"],
							"path": ["api", "players", "{{playerName}}"]
						},
						"description": "Delete a player and stop it if running"
					}
				},
				{
					"name": "Start Player",
					"request": {
						"method": "POST",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/players/{{playerName}}/start",
							"host": ["{{baseUrl}}"],
							"path": ["api", "players", "{{playerName}}", "start"]
						},
						"description": "Start the audio player process"
					}
				},
				{
					"name": "Stop Player",
					"request": {
						"method": "POST",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/players/{{playerName}}/stop",
							"host": ["{{baseUrl}}"],
							"path": ["api", "players", "{{playerName}}", "stop"]
						},
						"description": "Stop the audio player process"
					}
				},
				{
					"name": "Get Player Status",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/players/{{playerName}}/status",
							"host": ["{{baseUrl}}"],
							"path": ["api", "players", "{{playerName}}", "status"]
						},
						"description": "Check if a player is currently running"
					}
				},
				{
					"name": "Get Single Player",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/players/{{playerName}}",
							"host": ["{{baseUrl}}"],
							"path": ["api", "players", "{{playerName}}"]
						},
						"description": "Get configuration details for a specific player"
					}
				},
				{
					"name": "Update Player Sync Offset",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"delay_ms\": -150\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/players/{{playerName}}/offset",
							"host": ["{{baseUrl}}"],
							"path": ["api", "players", "{{playerName}}", "offset"]
						},
						"description": "Update synchronization offset for a player. Typical values are -200 to 0ms. Requires player restart to apply."
					}
				}
			]
		},
		{
			"name": "Volume",
			"item": [
				{
					"name": "Get Volume",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/players/{{playerName}}/volume",
							"host": ["{{baseUrl}}"],
							"path": ["api", "players", "{{playerName}}", "volume"]
						},
						"description": "Get the current volume level for a player"
					}
				},
				{
					"name": "Set Volume",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"volume\": 75\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/players/{{playerName}}/volume",
							"host": ["{{baseUrl}}"],
							"path": ["api", "players", "{{playerName}}", "volume"]
						},
						"description": "Set the volume level (0-100) for a player"
					}
				}
			]
		},
		{
			"name": "Devices",
			"item": [
				{
					"name": "Get Audio Devices (ALSA)",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/devices",
							"host": ["{{baseUrl}}"],
							"path": ["api", "devices"]
						},
						"description": "Get ALSA audio devices for Squeezelite and Snapcast players"
					}
				},
				{
					"name": "Get PortAudio Devices (Sendspin)",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/devices/portaudio",
							"host": ["{{baseUrl}}"],
							"path": ["api", "devices", "portaudio"]
						},
						"description": "Get PortAudio devices for Sendspin players. Use device index when creating Sendspin players."
					}
				}
			]
		},
		{
			"name": "Debug",
			"item": [
				{
					"name": "Debug Audio System",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/debug/audio",
							"host": ["{{baseUrl}}"],
							"path": ["api", "debug", "audio"]
						},
						"description": "Comprehensive debugging information for audio device detection and mixer controls"
					}
				}
			]
		},
		{
			"name": "State",
			"item": [
				{
					"name": "Get State Info",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/state",
							"host": ["{{baseUrl}}"],
							"path": ["api", "state"]
						},
						"description": "Get information about player state persistence"
					}
				},
				{
					"name": "Save State",
					"request": {
						"method": "POST",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/state/save",
							"host": ["{{baseUrl}}"],
							"path": ["api", "state", "save"]
						},
						"description": "Manually trigger a save of current player running states"
					}
				}
			]
		},
		{
			"name": "Providers",
			"item": [
				{
					"name": "Get Available Providers",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/providers",
							"host": ["{{baseUrl}}"],
							"path": ["api", "providers"]
						},
						"description": "Get list of available player providers (squeezelite, sendspin, snapcast)"
					}
				}
			]
		},
		{
			"name": "Sound Test",
			"item": [
				{
					"name": "Test Sound on Device",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"device\": \"hw:1,0\"\n}"
						},
						"url": {
							"raw": "{{baseUrl}}/api/devices/test",
							"host": ["{{baseUrl}}"],
							"path": ["api", "devices", "test"]
						},
						"description": "Play a test tone on the specified audio device"
					}
				}
			]
		}
	]
}
